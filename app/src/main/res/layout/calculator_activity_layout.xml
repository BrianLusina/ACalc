<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--include the calculator display-->
    <include
        layout="@layout/calc_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--custom viewpager-->
    <com.netlify.thelusina.acalc.widgets.PadViewPager
        android:id="@+id/pad_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/pad_numeric" />
            <include layout="@layout/pad_operator_one_col" />

        </LinearLayout>

        <include layout="@layout/pad_advanced" />

    </com.netlify.thelusina.acalc.widgets.PadViewPager>

</LinearLayout>